.root
  padding: 15px

  table
    margin: 15px -5px 0 -5px

  td
    padding: 0 5px

  thead
    font-weight: bold

.title
  margin-top: 0

.versionSelect
  font-size: 14px

.tag
  font-size: .8em
  padding: 0 5px
  line-height: 1

.new
  // composes: tag
  color: #2ecc71

.unclassified
  // composes: tag
  color: #3498db

.clickable
  cursor: pointer

  &:hover
    text-decoration: underline

.items
  display: flex
  flex-wrap: wrap


.item
  min-width: 200px
  flex: 0 0 auto
  padding: 5px
  width: 20%

  @media screen and (max-width: 1020px)
    width: 25%

  @media screen and (max-width: 820px)
    width: 33.3333%

  @media screen and (max-width: 620px)
    width: auto
    flex: 1 0 50%


.split
  display: flex

.definitionTables
  padding-right: 15px
  margin-right: 15px
  border-right: 1px solid rgba(white, .5)
